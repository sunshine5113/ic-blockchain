#!/usr/bin/env bash
set -eux
TESTNET_SERVICE_WORKER_DIR=../../boundary_node/ansible/roles/boundary_node/files/testnet_service_worker
test -e "$TESTNET_SERVICE_WORKER_DIR" || {
    echo "ERROR: Please link ../../boundary_node at the boundary node directory"
    exit 1
}
npm run clean
npm ic
npm run build-dev
rm -fr "$TESTNET_SERVICE_WORKER_DIR"
mv dist/ "$TESTNET_SERVICE_WORKER_DIR"
pushd "$TESTNET_SERVICE_WORKER_DIR"
git add .
popd
