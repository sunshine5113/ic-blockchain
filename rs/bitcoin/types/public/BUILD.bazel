load("@rules_rust//rust:defs.bzl", "rust_library")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "sources",
    srcs = glob(
        ["**"],
        exclude = ["target/**"],
    ),
)

rust_library(
    name = "public",
    srcs = glob(["src/**"]),
    crate_name = "ic_btc_types",
    edition = "2018",
    deps = [
        "@crate_index//:candid",
        "@crate_index//:serde",
        "@crate_index//:serde_bytes",
    ],
)
