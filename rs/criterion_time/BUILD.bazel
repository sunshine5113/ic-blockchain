load("@rules_rust//rust:defs.bzl", "rust_library")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "sources",
    srcs = glob(
        ["**"],
        exclude = ["target/**"],
    ),
)

rust_library(
    name = "criterion_time",
    srcs = glob(["src/**"]),
    edition = "2018",
    deps = [
        "@crate_index//:criterion",
        "@crate_index//:libc",
    ],
)
