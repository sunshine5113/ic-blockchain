package(
    default_visibility = ["//visibility:public"],
)

filegroup(
    name = "all_sources",
    srcs = glob(
        ["**"],
        exclude = [
            "target/**/*",
            "*.swp",
            ".*.swp",
            "nervous_system/common/bazel-out/**",
        ],
    ) + ["//rs/%s:sources" % p for p in subpackages(include = ["**"])],
)
